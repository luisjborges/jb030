<h1>Sign up to get notified here!</h1>
  <%= simple_form_for @subscriber do |f| %>
    <%= f.input :name, placeholder: "Name" %>
    <%= f.input :email, placeholder: "Email", input_html: { class: 'submit-field'}, label: false, wrapper: false %>
    <%= f.button :submit, "Notify me!", class: 'btn btn-primary' %>
<% end %>
