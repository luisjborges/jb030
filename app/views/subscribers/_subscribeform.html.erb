  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6 col-lg-8">
        <div id="newsletter-section">
            <%= simple_form_for Subscriber.new do |f| %>
              <%= f.input :name, label: false, placeholder: "Name", required: false %>
              <%= f.input :email, placeholder: "Email", label: false, wrapper: false, required: false %>
              <%= f.button :submit, "Let's keep the light on!", class: 'btn-newsletter' %>
          <% end %>
      </div>
    </div>
  </div>
</div>
