<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= image_tag @request.voucher.photo, width: '100%' %></div>
    <div class="col">
      <h1>request #<%= @request.id %> <small><span class="badge badge-primary"><%= @request.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @request.created_at.to_date %></li>
        <li><strong>VOUCHER</strong> <%= @request.voucher.name %> [<%= @request.voucher_sku %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @request.amount %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>
