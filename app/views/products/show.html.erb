<div class="show-container">

<h1><%= @product.name %> <%= humanized_money_with_symbol(@product.price) %></h1>
<p><%= @product.description %></p>

<%= form_tag orders_path do %>
  <%= hidden_field_tag 'product_id', @product.id %>
  <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
<% end %>

</br>

<% if @product.photo.attached? %>
  <%= cl_image_tag @product.photo.key, height: 300, width: 400, crop: :fill %>
<% else %>
  <h1>No image to show</h1>
<% end %>

<%= link_to 'Back', products_path %>

<% if policy(@product).edit? %>
  <%= link_to 'Edit', edit_product_path(@product) %>
<% end %>

<% if policy(@product).destroy? %>
  <%= link_to 'Delete', product_path(@product), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'Add a new review', new_product_review_path(@product) %>

<% @product.reviews.each do |review| %>
  <p><%= review.content %></p>
  <p><%= review.rating %></p>
  <%= link_to 'Delete', review_path(reviews), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>

</div>

<%= render 'shared/footerpages' %>
