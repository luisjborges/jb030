<div class="navbar navbar-expand-sm navbar-light navbar-jb">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>
</div>

<h1>All Products</h1>

<%= link_to 'Publish a new product', new_product_path %>

<div class="index-container">
  <div class="box">
      <div class="card-trip">
        <% @products.each do |product| %>
          <%= link_to product_path(product) do %>
            <%= cl_image_tag product.photo.key, height: 300, width: 400, crop: :fill %>
          <% end %>
            <div class="card-trip-infos">
              <div>
                <h2> <%= product.title %></h2>
                <p> <%= product.description %></p>
              </div>
              <h2 class="card-trip-pricing"><%= product.price %>â‚¬</h2>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
          </div>
        <% end %>
      </div>
  </div>
</div>



