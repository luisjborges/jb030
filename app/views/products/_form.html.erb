<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1>Publish/Update an article</h1>
        <%= simple_form_for @product do |f| %>
          <%= f.input :title %>
          <%= f.input :description %>
          <%= f.input :price %>
          <%= f.input :size %>
          <%= f.input :color %>
          <%= f.input :fabric %>
          <%= f.input :delivery %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
