<div class="navbar navbar-expand-sm navbar-light navbar-jb">
  <%= link_to products_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>
</div>


<div class="checkout-container">
  <div class="bg-white">
      <div class="container p-3">
        <div class="row">
          <div class="col-8">
            <h1>Checkout summary</h1>
            <h3><%= @order.product.name %></h3>
          </div>
          <div class="col-4">
            <%= image_tag @order.product.photo, width: '100%' %></div>
          </div>
        </div>
      </div>
  </div>

      <div class="col-md-4">
          <!-- checkout -->
          <div class="bg-white border p-3 sticky-top">

            <div class="d-flex justify-content-between mt-3">
              <p>Subtotal </p>
              <p><%= humanized_money_with_symbol @order.total %></p>
            </div>

            <div class="d-flex justify-content-between mt-3 border-bottom">
              <p>Delivery </p>
              <p>Free</p>
            </div>

            <div class="d-flex justify-content-between mt-3">
              <p>Total (VAT included) </p>
              <p><%= humanized_money_with_symbol @order.total %></p>
            </div>
              <button id="pay" class="btn btn-flat">Pay</button>
              <script src="https://js.stripe.com/v3/"></script>
              <script>
                const paymentButton = document.getElementById('pay');
                paymentButton.addEventListener('click', () => {
                const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
                stripe.redirectToCheckout({
                sessionId: '<%= @order.checkout_session_id %>'
                  });
                });
              </script>
          </div>

      </div>

</div>
