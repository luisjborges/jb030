<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= image_tag @ordervoucher.voucher.photo, width: '100%' %></div>
    <div class="col">
      <h1>Order #<%= @ordervoucher.id %> <small><span class="badge badge-primary"><%= @ordervoucher.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @ordervoucher.created_at.to_date %></li>
        <li><strong>VOUCHER</strong> <%= @ordervoucher.voucher.name %> [<%= @ordervoucher.voucher_sku %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @ordervoucher.amount %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>
