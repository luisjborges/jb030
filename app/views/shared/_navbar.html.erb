<div class="navbar navbar-expand-sm navbar-dark navbar-jb fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo-white.png" %>
    <% end %>

  <button class="navbar-toggler custom-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="nav-content">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "JB SAYS HI", about_path, class: "nav-link", id:"navbar-font" %>
        </li>
        <span class="badge badge-pill badge-light" id="soon-font">Soon!</span>
        <li class="nav-item">
          <li class="nav-item dropdown">
          <%= link_to "MARKET", '#', class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Vouchers", '#', class: "dropdown-item" %>
                <%= link_to "Shirts", '#', class: "dropdown-item" %>
                <%= link_to "All Products", '#', class: "dropdown-item" %>
              </div>
            </li>
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag(current_user.photo.key,
                crop: :thumb, gravity: :face, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false) %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <% else %>
              <%= image_tag "user.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <% end %>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
          </li>
        <% else %>
        <li class="nav-item">
          <%#= link_to "LOGIN | REGISTER", new_user_session_path, class: "nav-link", id:"navbar-font" %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

