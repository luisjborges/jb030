
<div class="signup-container">

    <%= simple_form_for @order do |f| %>
    <%= f.error_notification %>

      <div class="form-inputs">
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "first_name" } %>
      <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "last_name" } %>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :street,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :house_number,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :city,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :post_code,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :country, placeholder: "Germany",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      </div>

      <div class="form-actions button-centered">
        <%= f.button :submit, "Next", class: "btn btn-flat wj-100" %>
      </div>
    <% end %>
</div>




