<div class="signup-container">
  <div class="container pt-5">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6 col-lg-4">
        <h2 class="text-center mb-5">Sign up</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :first_name, placeholder: "Bob",
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "first-name" }%>
              <%= f.input :last_name, placeholder: "Sponge",
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "last-name" }%>
              <%= f.input :email, placeholder: "bobsponge@deepsea.com",
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email" }%>
              <%= f.input :password,
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" } %>
              <%= f.input :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password" } %>

            <div class="form-actions button-centered">
              <%= f.button :submit, "Sign up", class: "button-size button-color" %>
            </div>
          </div>
          <% end %>

          <%= render "devise/shared/links", class: "login-button"%>
        </div>
      </div>
  </div>
</div>
